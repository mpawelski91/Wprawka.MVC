@using Library.Common.ViewModels.User
@model IEnumerable<UserListViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<script>
     function showConfirm() {
         var result = confirm("Press a button!");
         
     }
</script>


<table>
    <tr>
        <th> 
            @Html.DisplayNameFor(model => model.UserName) 
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.BirthDate) 
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.Email) 
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.AddDate) 
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.ModifiedDate) 
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.BooksBorrowed) 
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.Active) 
        </th>
    </tr>
    
    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => user.UserName)
            </td>
            <td>
                @Html.DisplayFor(model => user.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(model => user.Email)
            </td>
            <td>
                @Html.DisplayFor(model => user.Phone)
            </td>
            <td>
                @Html.DisplayFor(model => user.AddDate)
            </td>
            <td>
                @Html.DisplayFor(model => user.ModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(model => user.BooksBorrowed)
            </td>
            <td>
                @Html.DisplayFor(model => user.Active)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = user.UserID })

                @if(user.IsActive && user.BooksBorrowed == 0)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = user.UserID }, new { onclick = "return confirm('Are sure wants to delete?');" })
                }
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Create User", "Add")

